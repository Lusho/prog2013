/*prctico 6
1.	Suma de los números enteros entre 1 y N.
	S=1+2+3+⋯…………+N*/

#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include <iostream>

using namespace std;
int main()
{int n,c,s=0;
cout<<"ingresa el limite de la suma de enteros:";

cin>>n;

for (c=1;c<=n;c++)    
{s=s+c;

}
cout<<"la suma de los "<<n<<" enteros es:"<<s;
getch();
	return 0;
}
